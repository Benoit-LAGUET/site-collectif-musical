{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
  <div class="container" style="max-width: 600px; margin: 2rem auto; font-family: Arial, sans-serif;">
    <h1>{{ event.title }}</h1>

    <p><strong>Date :</strong> {{ event.date|date('d/m/Y H:i') }}</p>
    <p><strong>Lieu :</strong> {{ event.lieu }}</p>

    {% if event.description %}
      <p><em>{{ event.description }}</em></p>
    {% endif %}

    <p><a href="{{ path('site_index') }}">← Retour à l’accueil</a></p>
  </div>
{% endblock %}
